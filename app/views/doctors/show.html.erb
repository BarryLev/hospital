<div>
  <section>
    <h1><%= @doctor.name %></h1>

    <p><strong>Category:</strong> <%= @doctor.category.name %></p>

    <div class="d-flex justify-content-center">
      <% if current_user.blank? || current_user.patient? %>
        <%= button_to 'Set an appointment', appointments_path(id: @doctor.id), method: :post,
                      class: "btn btn-primary me-2" %>
      <% end %>

      <%= link_to 'Back', doctors_path, class: "btn btn-danger" %>
    </div>
  </section>
  <section>
    <%# Add photo %>
  </section>
</div>
